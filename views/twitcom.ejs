<!DOCTYPE html>
<html>
	<head>
		<link rel="stylesheet" type="text/css" href="/css/site.css">
		<script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
		<script src="/javascript/moment.min.js"></script>
		<script src="/javascript/moment-timezone-with-data-2010-2020.min.js"></script>
		<script src="/javascript/tweet_submit.js"></script>
		<script src="/javascript/vote.js"></script>
	</head>
	<body>
		<header>
			<title>TwitCom</title>
			<%- include('_header', { user: user }) %>			
		</header>

		<main>
			<span class="row">
				<button id="submit_button">submit</button>

				<span class="order">
					<button onclick="window.location.href='/'">Votes</button>
					<button onclick="window.location.href='/latest'">Latest</button>
					<button onclick="window.location.href='/random'">Random</button>
				</span>
			</span>

			<!-- Submit Form -->
			<div id="tweet-submit">
			<!-- <form action="/tweets/submit" method="POST"> -->
				<p> Submit info </p>
				<textarea id="form_body" name="body" placeholder="Go on..." maxlength="144"></textarea><br>
				<button id="form_submit">Submit</button>
				<button id="form_cancel">Cancel</button>
			</div>

			

			<!-- Test button -->
			<span>
				<button id="refresh">refresh</button><br>
				<!-- TIMER -->
				<div id="timer"></div>
			</span>
			<div id="tweet_list">
			 	<%- include('_tweet_list', { tweets: tweets }) %>
			</div>
		</main>
	</body>	

</html>

